# Audio Provider Configuration
# Options: mock, openai, stability, elevenlabs
AUDIO_PROVIDER=elevenlabs

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_api_key_here

# ElevenLabs Output Format Options:
# Ultra High Quality (Uncompressed):
#   - pcm_48000 (48kHz PCM - Best quality, largest file size) [CURRENT DEFAULT]
#   - pcm_44100 (44.1kHz PCM - Studio quality)
#
# High Quality (Compressed):
#   - mp3_44100_192 (192kbps MP3 - Excellent quality, smaller files) [Requires Creator tier+]
#   - opus_48000_192 (192kbps Opus - Excellent quality)
#   - mp3_44100_128 (128kbps MP3 - Good quality, balanced)
#
# Standard Quality:
#   - mp3_44100_96 (96kbps MP3 - Decent quality)
#   - opus_48000_64 (64kbps Opus - Lower file size)
#
ELEVENLABS_OUTPUT_FORMAT=pcm_48000

# OpenAI Configuration (for speech/voiceover only)
OPENAI_API_KEY=your_openai_key_here
OPENAI_AUDIO_MODEL=gpt-4o-audio-preview
OPENAI_AUDIO_VOICE=alloy

# Stability AI Configuration (API not fully available yet)
STABILITY_API_KEY=your_stability_key_here
STABILITY_AUDIO_ENDPOINT=https://api.stability.ai/v2beta/stable-audio/generate
STABILITY_AUDIO_FORMAT=wav

# Database (if needed)
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/sanctum"

# NextAuth (if needed)
NEXTAUTH_SECRET="replace-with-generated-secret"
NEXTAUTH_URL="http://localhost:3000"
